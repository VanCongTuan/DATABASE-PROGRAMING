@model IEnumerable<WebDatVeMayBay.MayBay>
@{
    ViewBag.Title = "Máy bay";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Content/Clients/index3.html" class="nav-link">Trang chử</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Máy Bay</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Máy Bay</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Máy Bay</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="/admin/MayBay/add" class="btn btn-primary"> Thêm Mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead style="font-weight: bold">  
                    <tr>
                        <td>Tên máy bay</td>
                        <td>Hãng bay</td>
                        <td> Số Hiệu</td>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tenMB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hangMB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.soHieu)
                            </td>  
                            <td>
                                <a href="/admin/MayBay/edit/@item.maMb" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="/admin/MayBay/delete/@item.maMb" class="btn btn-sm btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                   
                </tbody>

            </table>
        </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
</section>
