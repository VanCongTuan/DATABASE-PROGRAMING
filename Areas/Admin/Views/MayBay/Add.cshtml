@model WebDatVeMayBay.MayBay

@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Content/Clients/index3.html" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm Mới</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới máy bay</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin máy bay được thêm mới</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper linear">
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Add", "MayBay", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Máy Bay</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @ViewBag.Ma
                            <div class="col-md-10">

                                @Html.EditorFor(model => model.maMb, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.maMb, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @ViewBag.TenMoi
                            <div class="col-md-10">

                                @Html.EditorFor(model => model.tenMB, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.tenMB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @ViewBag.HangMoi
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.hangMB, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.hangMB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @ViewBag.SoHieu
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.soHieu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.soHieu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-danger">@Html.ActionLink("Quay Lại", "Index")</button>
                            <button type="submit" class="btn btn-primary">Thêm </button>
                        </div>
                    </div>

                    }


                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
</section>



